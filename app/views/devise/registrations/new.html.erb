<div class="container">
  <div class="row">
    <div class="col-md-11 pt-3">
    <%= form_with model: @customer, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

      <h4>新規会員登録</h4>
      <div class="container pull-left table-responsive">
        <table>
          <tr>
            <th>
              <%= f.label :名前 %>
            </th>
            <td>
              <%= f.label :（姓） %>
              <%= f.email_field :last_name, autofocus: true, autocomplete: "last_name" %>
              <%= f.label :（名） %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :フリガナ %>
            </th>
            <td>
              <%= f.label :（セイ） %>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
              <%= f.label :（メイ） %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :メールアドレス %>
            </th>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :住所 %>
            </th>
            <td>
              <%= f.email_field :address, autofocus: true, autocomplete: "address" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :電話番号（ハイフンなし）%>
            </th>
            <td>
              <%= f.email_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :パスワード %>
              <% if @minimum_password_length %>
                (<%= @minimum_password_length %> 文字以上）
              <% end %><br />
            </th>
            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th>
              <%= f.label :パスワード（確認用）%>
            </th>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <td>
              <%= f.submit "新規登録" %>
            </td>
          </tr>
          
        </table>
      </div>
      <% end %>

      <h4>既に登録済みの方</h4>
      <p>
        <p><%= link_to "こちら", new_user_session_path %>
        からログインしてください。
      </p>
    </div>

  </div>
</div>
